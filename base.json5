{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        // These packages are not public, so renovate does nto find the packages anyway
        {
            "matchPackagePrefixes": [
                "ch.ubique:backend-jvm-lib",
                "ch.ubique.pushservice:ub-push",
                "ch.ubique.viadi:viadi",
                "ch.ethz:eth",
                "ch.ubique:metar-taf-parser",
                "ch.ubique:inotify"
            ],
            "enabled": false
        },
        // Separate group for Spring Boot and CLoud packages (one group because they have to be compatible versions)
        {
            "matchPackagePrefixes": [
                "org.springframework.boot:spring-boot",
                "org.springframework.cloud:spring-cloud"
            ],
            "groupName": "spring-boot-cloud",
            matchUpdateTypes: [
                "major",
                "minor"
            ],
            separateMajorMinor: true
        },
        // Separate group for Spring Boot and CLoud packages (one group because they have to be compatible versions)
        {
            "matchPackagePrefixes": [
                "org.springframework.boot:spring-boot",
                "org.springframework.cloud:spring-cloud"
            ],
            "groupName": "patch-spring-boot-cloud-automerge",
            // autoMerge patches after passing tests by fast-forwarding
            matchUpdateTypes: [
                "patch"
            ],
            autoMerge: true,
            autoMergeStartegy: "fast-forward"
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "groupName": "dependencies",
            "excludePackagePrefixes": [
                "ch.ubique:backend-jvm-lib",
                "ch.ubique.pushservice:ub-push",
                "ch.ubique.viadi:viadi",
                "ch.ethz:eth",
                "org.springframework.boot:spring-boot"
            ],
            matchUpdateTypes: [
                "major",
                "minor"
            ],
            separateMajorMinor: true
        },
        {
            "matchPackagePatterns": [
                "*"
            ],
            "groupName": "patch-dependencies-automerge",
            "excludePackagePrefixes": [
                "ch.ubique:backend-jvm-lib",
                "ch.ubique.pushservice:ub-push",
                "ch.ubique.viadi:viadi",
                "ch.ethz:eth",
                "org.springframework.boot:spring-boot"
            ],
            // autoMerge patches after passing tests by fast-forwarding
            matchUpdateTypes: [
                "patch"
            ],
            autoMerge: true,
            autoMergeStartegy: "fast-forward"
        }
    ],
    "schedule": [
        "before 3am on the first day of the month"
    ]
}